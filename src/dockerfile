FROM ubuntu:20.04

WORKDIR /app 

RUN apt-get update && \
    apt-get install -y python3 python3-pip && \
    apt-get clean

#Download requirements for app
COPY requirements.txt .
RUN pip install -r requirements.txt

#Copy all dependencies
COPY blockchain/ .
COPY comms/ .
COPY scenarios/one_on_one/main.py .
COPY scenarios/file_managers/* .

RUN ls

#tail is a dummy process so container don't exit once the process is done
#["python3", "main.py", "&&", "tail", "-f", "/dev/null"]

CMD python3 main.py &&  tail -f /dev/null 